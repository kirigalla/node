<!--Cabecera del html-->
<%-include('partes/_header')-%>
<!--Cuerpo del html-->
<div class="container mt-5">
    <div class="row">
      <div class="col-md-5 offset-md-3 card">
        <div class="card-body">
          <form action="/update/<%= data.id %>" method="POST">
            <div class="form-group">
              <input type="text" name="name" value="<%= data.name%>" placeholder="Nombre" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="address" value="<%= data.address%>" placeholder="Direccion" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="phone" value="<%= data.phone%>" placeholder="Telefono" class="form-control">
            </div>
  
            <button type="submit" class="btn btn-primary">
              Guardar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!--Footer del html-->
  <%-include('partes/_footer')-%>